Program:
    'PREP'
        load*=Load
    'START'
        actions*=Actions 
    'END'
;

Actions:
    Mix | Cook | Serve | Add | Find | View
;

Mix:
    'mix' name=ID '=' ingredients+=Ingredient ('+' ingredients+=Ingredient)* ';'   
;

Ingredient:
    ID | STRING  
;

STRING:
    '"' /[^"]+/ '"'
;

Cook:
    'cook:' item=ID ';'
;

Serve:
    'serve:' item=ID ';'
;

Add:
    'add'
    '*' ingredients+=Ingredient ('*' ingredients+=Ingredient)*
    '*=' result=ID ';'
;

Find:
    'for' key=Ingredient ':' 
    'find:' action=Keyword ';'
;

Keyword:
    'recipes' | 'ingredients'
;

View:
    'view' key=Ingredient ';'
;

Load:
    '>' name=Ingredient ':' ingredients+=Ingredient ('+' ingredients+=Ingredient)* ';'   
;